#include <iostream>

int main() {
    int number, product = 1;
    
    std::cout << "Enter an integer: ";
    std::cin >> number;
    
    while (number > 0) {
        int digit = number % 10;
        product *= digit;
        number /= 10;
    }

    std::cout << "Product of digits: " << product << std::endl;

    if (product % 4 == 0)
        std::cout << "It's a multiple of 4." << std::endl;
    
    if (product % 5 == 0)
        std::cout << "It's a multiple of 5." << std::endl;
    
    if (product % 7 == 0)
        std::cout << "It's a multiple of 7." << std::endl;

    return 0;
}
